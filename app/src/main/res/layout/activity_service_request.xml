<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbarStyle="insideOverlay">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.edwingariza.franssenpropertiesinc.ServiceRequest"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_str"
            tools:text="@string/category_str"
            android:layout_marginLeft="38dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="37dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="@string/issue_str"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/issue_textbox"
            android:layout_marginRight="8dp"
            android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/category_text"
            app:layout_constraintHorizontal_bias="0.542" />

        <EditText
            android:id="@+id/issue_textbox"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:text="@string/issue_str"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView11" />

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="@string/permission_str"
            android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.034"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/contact_text"
            app:layout_constraintVertical_bias="0.0" />

        <RadioButton
            android:id="@+id/permission_radio_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            tools:text="@string/yes_radio"
            app:layout_constraintRight_toLeftOf="@+id/permission_radio_no"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/permission_text"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintBaseline_toBaselineOf="@+id/permission_text" />

        <RadioButton
            android:id="@+id/permission_radio_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            tools:text="@string/no_radio"
            android:layout_marginRight="69dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/permission_text" />

        <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="@string/contact_str"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/permission_radio_yes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/info_name_text"
            android:layout_width="57dp"
            android:layout_height="14dp"
            android:text="TextView"
            tools:text="@string/rel_name_str"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/con_info_textbox"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/contact_text"
            app:layout_constraintHorizontal_bias="0.609" />

        <EditText
            android:id="@+id/con_info_textbox"
            android:layout_width="123dp"
            android:layout_height="27dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_marginRight="49dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/info_name_text" />

        <TextView
            android:id="@+id/inf_phon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="@string/phone_str"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/info_name_text"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/apt_text"
            app:layout_constraintRight_toLeftOf="@+id/editText3"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintVertical_bias="0.48" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="129dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="phone"
            android:layout_marginRight="43dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/inf_phon_text" />

        <TextView
            android:id="@+id/apt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="@string/apt_str"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/apt_textbox"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.591"
            app:layout_constraintBaseline_toBaselineOf="@+id/apt_textbox" />

        <EditText
            android:id="@+id/apt_textbox"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginBottom="476dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" />

        <Button
            android:id="@+id/ser_re_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:text="@string/submit_btn_str"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/apt_text" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="165dp"
            android:layout_height="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintLeft_toRightOf="@+id/category_text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/category_text" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
