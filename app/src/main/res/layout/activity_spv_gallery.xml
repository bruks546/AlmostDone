<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andoid="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_green_dark"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            andoid:targetApi="ice_cream_sandwich" />


        <TextView
            android:id="@+id/textView57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="30dp"
            android:text="@string/spv_name_str"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="apply"
            android:text="@string/threeCpBtnAply" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/spv" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/spvcomm" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/spvface" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/spvside" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="apply"
            android:text="@string/threeCpBtnAply" />

    </LinearLayout>


</ScrollView>